{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
        },
        "lint": {
            "outputs": []
        },
        "dev": {
            "cache": false
        },
        "deploy": {
            "cache": false,
            "outputs": ["artifacts/**", "cache/**"]
        },
        "format-check": {
            "outputs": []
        },
        "format": {
            "cache": false,
            "outputs": []
        },
        "test": {
            "outputs": []
        }
    }
}